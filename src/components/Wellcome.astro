---
import wellcomeImage from '../assets/Wellcome.webp';
---

<aside
  class="wellcome-container"
  style={`--wellcome-image: url('${wellcomeImage.src}')`}
>
  <header>
    <h1>Bienvenido</h1>
    <p>Edu & Nadia te invitan a su boda</p>
  </header>
</aside>

<style>
  .wellcome-container {
    height: 100vh;
    width: 100vw;
    position: relative;
    padding-block: 100px;
    padding-inline: 30px;

    display: flex;
    align-items: center;
    justify-content: center;

    /* Pseudo-elemento para el fondo con blur */
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: var(--wellcome-image);
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      filter: blur(10px);
      z-index: -1;
    }

    header {
      color: black;
      background-color: var(--color-primary-100);
      padding: 30px;
      border-radius: 6px;

      display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
      z-index: 1;

      font-family: 'Marck Script', cursive;

      h1 {
        font-size: 3rem;
      }

      p {
        font-size: 1.5rem;
        text-align: center;
      }
    }
  }
</style>